{
  "name": "aws-infra-demo-app",
  "version": "1.0.0",
  "description": "Sample Node.js application for AWS infrastructure demo",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "build": "npm run test:unit && npm run lint",
    "test": "npm run test:unit && npm run test:integration && npm run test:smoke",
    "test:unit": "jest --testPathPattern=tests/unit --coverage --runInBand --forceExit",
    "test:integration": "jest --testPathPattern=tests/integration --runInBand --forceExit",
    "test:smoke": "jest --testPathPattern=tests/smoke --runInBand --forceExit",
    "test:all": "node test-runner.js",
    "validate": "node validate.js",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix"
  },
  "dependencies": {
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "morgan": "^1.10.0",
    "@aws-sdk/client-secrets-manager": "^3.450.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.1",
    "eslint": "^8.53.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.3.1",
    "eslint-plugin-promise": "^6.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "nodejs",
    "express",
    "aws",
    "terraform",
    "cicd"
  ],
  "author": "DevOps Team",
  "license": "MIT"
}